# Unfiltered - Environment Variables Template
# Copy this file to .env.local for local development
# Set these in your hosting platform's environment variables for production

# ============================================
# Currently, this app requires NO environment variables
# The following are examples for future integrations
# ============================================

# Database (when you add persistence)
# DATABASE_URL="postgresql://user:password@host:5432/database"
# DATABASE_URL="mysql://user:password@host:3306/database"

# Authentication (when you add user accounts)
# NEXTAUTH_SECRET="generate-with: openssl rand -base64 32"
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_URL_PRODUCTION="https://yourdomain.com"

# OAuth Providers (optional)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# GITHUB_ID=""
# GITHUB_SECRET=""

# File Storage (when you add photo persistence)
# BLOB_READ_WRITE_TOKEN="" # Vercel Blob
# CLOUDINARY_URL="" # Cloudinary
# AWS_ACCESS_KEY_ID="" # S3
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION=""
# AWS_BUCKET_NAME=""

# Email (for notifications, password reset, etc.)
# RESEND_API_KEY=""
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASSWORD=""

# Analytics & Monitoring
# NEXT_PUBLIC_GA_ID="" # Google Analytics
# SENTRY_DSN="" # Error tracking
# VERCEL_ANALYTICS_ID="" # Vercel Analytics (auto-configured on Vercel)

# API Keys (if you add external integrations)
# OPENAI_API_KEY="" # For AI-powered features
# STRIPE_SECRET_KEY="" # For payments
# STRIPE_PUBLISHABLE_KEY=""

# Feature Flags
# NEXT_PUBLIC_ENABLE_SIGNUP="true"
# NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN="true"
# NEXT_PUBLIC_MAINTENANCE_MODE="false"

# Development Only
# SKIP_ENV_VALIDATION="false"
